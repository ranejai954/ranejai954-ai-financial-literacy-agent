import re

def clean_text(text):
    # Remove special characters and multiple spaces
    cleaned = re.sub(r'\s+', ' ', text)
    cleaned = re.sub(r'\[[^\]]*\]', '', cleaned)  # remove reference numbers like [1], [2]
    return cleaned.strip()

